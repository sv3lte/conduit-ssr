{
  "author": "Yoonge <7884008@qq.com>",
  "description": "Message Board SSR built with Art-Template + ESlint + Joi + JWT + Koa2 + Prettier + TypeScript.",
  "keywords": [
    "Art-Template",
    "ESlint",
    "Joi",
    "JWT",
    "Koa2",
    "Prettier",
    "SSR",
    "TypeScript"
  ],
  "name": "message-board-be",
  "private": true,
  "type": "module",
  "version": "0.1.0",
  "scripts": {
    "apidoc": "npx apidoc -i src -o apidoc",
    "dev": "npx nodemon src/bin/www.ts",
    "format": "npx prettier --write src",
    "lint": "npx eslint src",
    "prd": "pm2 start src/bin/www.ts",
    "start": "npx ts-node src/bin/www.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@koa/router": "^12.0.0",
    "art-template": "^4.13.2",
    "debug": "^4.3.4",
    "joi": "^17.9.1",
