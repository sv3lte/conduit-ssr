    "@types/koa-static": "^4.0.2",
    "@types/koa__router": "^12.0.0",
    "@types/md5": "^2.3.2",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "apidoc": "^0.54.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "nodemon": "^1.19.4",
    "prettier": "^2.8.7",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
