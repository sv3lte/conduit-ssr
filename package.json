    "koa": "^2.14.2",
    "koa-art-template": "^1.1.1",
    "koa-bodyparser": "^4.4.0",
    "koa-json": "^2.0.2",
    "koa-logger": "^3.2.1",
    "koa-onerror": "^4.2.0",
    "koa-session": "^6.4.0",
    "koa-static": "^5.0.0",
    "md5": "^2.3.0",
    "mongoose": "^7.0.3"
  },
  "devDependencies": {
    "@types/apidoc": "^0.50.0",
    "@types/debug": "^4.1.7",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/koa": "^2.13.6",
