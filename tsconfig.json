{
  // "extends": "./config/base",
  // "files": ['app.ts', 'index.ts'],
  "include": ["./bin/**/*", "./src/**/*"],
  // "exclude": [ "./src/temp/**/*" ],
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    // "lib": [ "ESNext", "DOM" ],
    "typeRoots": ["./types", "node_modules/@types"],
    "outDir": "./dist",
    // "outFile": "./dist/bundle.js",
    "sourceMap": true,
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    // "noEmit": false,
    "noEmitOnError": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    // "jsx": "react-jsx",
    "strict": true
    // "alwaysStrict": false,
    // "noImplicitAny": true,
    // "noImplicitThis": true,
    // "strictNullChecks": true,
    // "forceConsistentCasingInFileNames": true,
    // "noFallthroughCasesInSwitch": false,
  },
  "ts-node": {
    "esm": true
  }
}
